<div class="flex flex-col h-full">
  <%- include('partials/header') -%>
  <div class="flex-1 bg-neutral">
    <div class="flex flex-col">
        <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
          <div class="py-2 inline-block min-w-full sm:px-6 lg:px-8">
            <div class="overflow-hidden">
              <table class="min-w-full">
                <thead class="border-b">
                  <tr>
                    <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">
                      
                    </th>
                    <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">
                      
                    </th>
                  </tr>
                </thead>
                <tbody>
                  <tr class="border-b">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-white">Date & Time Started:</td>
                    <td class="text-sm text-white font-light px-6 py-4 whitespace-nowrap">
                        <%= attack.startDate.toString().slice(0, 15) %> @ <%= attack.startTime %> 
                    </td>
                  </tr>
                  <tr class="bg-neutral border-b">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-white">Date & Time Finished:</td>
                    <td class="text-sm text-white font-light px-6 py-4 whitespace-nowrap">
                        <%= attack.endDate.toString().slice(0, 15) %> @ <%= attack.endTime %>
                    </td>
                  </tr>
                  <tr class="bg-neutral border-b">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-white">Pain Level: </td>
                    <td class="text-sm text-white font-light px-6 py-4 whitespace-nowrap">
                        <%= attack.painLevel %>
                    </td>
                  </tr>
                  <tr class="bg-neutral border-b">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-white">Triggers: </td>
                    <td class="text-sm text-white font-light px-6 py-4 whitespace-nowrap">
                        <%= attack.triggers %>
                    </td>
                  </tr>
                  <tr class="bg-neutral border-b">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-white">Aura: </td>
                    <td class="text-sm text-white font-light px-6 py-4 whitespace-nowrap">
                        <%= attack.aura %>
                    </td>
                  </tr>
                  <tr class="bg-neutral border-b">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-white">Medicine Taken: </td>
                    <td class="text-sm text-white font-light px-6 py-4 whitespace-nowrap">
                        <%= attack.medicineTaken %>
                    </td>
                  </tr>
                  <tr class="bg-neutral border-b">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-white">Other Relief: </td>
                    <td class="text-sm text-white font-light px-6 py-4 whitespace-nowrap">
                        <%= attack.otherRelief %>
                    </td>
                  </tr>
                  <tr class="bg-neutral border-b">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-white">Notes: </td>
                    <td class="text-sm text-white font-light px-6 py-4 whitespace-nowrap">
                        <%= attack.notes %>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
  </div>
  <%- include('partials/footer') -%>
</div>